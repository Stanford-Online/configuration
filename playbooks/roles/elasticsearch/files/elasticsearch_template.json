{
  "order": 0,
  "template": "logstash-*",
  "settings": {
    "index.refresh_interval": "5s"
  },
  "mappings": {
    "_default_": {
      "dynamic_templates": [{
        "string_fields" : {
            "match" : "*",
            "match_mapping_type" : "string",
            "mapping" : {
              "type" : "multi_field",
              "fields" : {
                "{name}": {"type": "string", "index": "analyzed"},
                "raw" : {"type": "string", "index" : "not_analyzed", "ignore_above" : 256}
               },
               "omit_norms" : true
            }
        }
      }],
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "geoip": {
          "dynamic": true,
          "properties": {
            "location": {
              "type": "geo_point"
            },
            "longitude": {
              "type": "float"
            },
            "latitude": {
              "type": "float"
            },
            "ip": {
              "type": "ip"
            }
          }
        },
        "@version": {
          "index": "not_analyzed",
          "type": "string"
        }
      },
      "_all": {
        "enabled": true,
        "omit_norms": true
      }
    }
  }
}
